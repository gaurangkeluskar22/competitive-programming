class Solution {
public:
    void rotate(vector<vector<int>>& matrix) {
        // transpose and then reverse the matrix
        int temp=0;
        for(int i=0;i<matrix.size();i++){
            for(int j=i;j<matrix[i].size();j++){
                int temp=matrix[i][j];
                matrix[i][j]=matrix[j][i];
                matrix[j][i]=temp;
            }
        }
        for(int i=0;i<matrix.size();i++){
            reverse(matrix[i].begin(),matrix[i].end());
        }
    }
};
